isbn = {0960-7412},
issn = {1365313X},
journal = {Plant Journal},
keywords = {X-ray computed tomography,multiple target tracking,root system interaction,technical advance},
number = {5},
pages = {1034--1043},
title = {{Extracting multiple interacting root systems using X-ray microcomputed tomography}},
volume = {84},
